<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_employee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fine"
    tools:context="com.example.admin.videolendingsystem.Employee.ChangeEmployee">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="21dp"
        android:id="@+id/change_lastName"
        android:hint="Last Name"
        android:layout_below="@+id/change_firstName"
        android:layout_alignLeft="@+id/change_firstName"
        android:layout_alignStart="@+id/change_firstName" />

    <Button
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/changeSaveButton"
        android:layout_below="@+id/change_dateEmployed"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/change_firstName"
        android:hint="First Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/change_dateEmployed"
        android:hint="Date Employed"
        android:layout_below="@+id/change_gender"
        android:layout_alignLeft="@+id/change_gender"
        android:layout_alignStart="@+id/change_gender"
        android:layout_marginTop="13dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/change_gender"
        android:hint="Gender"
        android:layout_below="@+id/change_NatId"
        android:layout_alignLeft="@+id/change_NatId"
        android:layout_alignStart="@+id/change_NatId"
        android:layout_marginTop="17dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/change_address"
        android:hint="Address"
        android:layout_below="@+id/change_lastName"
        android:layout_alignLeft="@+id/change_lastName"
        android:layout_alignStart="@+id/change_lastName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/change_PhoneNumber"
        android:hint="Phone Number"
        android:layout_below="@+id/change_address"
        android:layout_alignLeft="@+id/change_address"
        android:layout_alignStart="@+id/change_address"
        android:layout_marginTop="11dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/change_NatId"
        android:hint="NatId Number"
        android:layout_below="@+id/change_PhoneNumber"
        android:layout_alignLeft="@+id/change_PhoneNumber"
        android:layout_alignStart="@+id/change_PhoneNumber"
        android:layout_marginTop="19dp" />
</RelativeLayout>
</ScrollView>