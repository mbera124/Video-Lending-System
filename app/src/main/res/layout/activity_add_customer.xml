<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fine">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.admin.videolendingsystem.Customer.AddCustomer">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:id="@+id/customer_address"
        android:hint="Address"
        android:layout_below="@+id/customer_lastName"
        android:layout_alignLeft="@+id/customer_lastName"
        android:layout_alignStart="@+id/customer_lastName" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:id="@+id/customer_gender"
        android:hint="Gender"
        android:layout_below="@+id/customer_nationalId"
        android:layout_alignLeft="@+id/customer_nationalId"
        android:layout_alignStart="@+id/customer_nationalId" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:id="@+id/customer_nationalId"
        android:hint="National Id"
        android:layout_below="@+id/acustomer_phonenumber"
        android:layout_alignLeft="@+id/acustomer_phonenumber"
        android:layout_alignStart="@+id/acustomer_phonenumber" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/acustomer_phonenumber"
        android:layout_marginTop="12dp"
        android:hint="Phone Number"
        android:layout_below="@+id/customer_address"
        android:layout_alignLeft="@+id/customer_address"
        android:layout_alignStart="@+id/customer_address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/customer_registeredBy"
        android:hint="Registered By"
        android:layout_below="@+id/customer_gender"
        android:layout_alignLeft="@+id/customer_gender"
        android:layout_alignStart="@+id/customer_gender"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/customer_lastName"
        android:hint="Last Name"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/customer_firstName"
        android:layout_alignLeft="@+id/customer_firstName"
        android:layout_alignStart="@+id/customer_firstName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="23dp"
        android:id="@+id/customer_firstName"
        android:hint="First Name"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customerSaveButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/customer_registeredBy" />
</RelativeLayout>
</ScrollView>