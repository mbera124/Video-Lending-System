<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fine">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_rented_videos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"


    tools:context="com.example.admin.videolendingsystem.RentedVideo.AddRentedVideos">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_customer"
        android:layout_marginTop="28dp"
        android:layout_marginRight="71dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/rentedvideos_dateRented"
        android:layout_alignStart="@+id/rentedvideos_dateRented" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:id="@+id/rentedvideos_dateRented"
        android:hint="Date Rented"
        android:layout_below="@+id/spinner_video"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/rentedvideos_expReturnDate"
        android:hint="Expected Return Date"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rentedvideos_dateRented"
        android:layout_alignLeft="@+id/rentedvideos_dateRented"
        android:layout_alignStart="@+id/rentedvideos_dateRented" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/rentedvideos_returnedDate"
        android:hint="Returned Date"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rentedvideos_expReturnDate"
        android:layout_alignLeft="@+id/rentedvideos_penalty"
        android:layout_alignStart="@+id/rentedvideos_penalty" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/rentedvideos_penalty"
        android:hint="Penalty"
        android:layout_below="@+id/rentedvideos_returnedDate"
        android:layout_alignLeft="@+id/rentedvideos_expReturnDate"
        android:layout_alignStart="@+id/rentedvideos_expReturnDate"
        android:layout_marginTop="20dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/spinner_video"
        android:layout_below="@+id/spinner_customer"
        android:layout_alignRight="@+id/spinner_customer"
        android:layout_alignEnd="@+id/spinner_customer" />

    <Button
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rentedvideos_save"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rentedvideos_status" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/rentedvideos_status"
        android:hint="Status"
        android:layout_below="@+id/rentedvideos_penalty"
        android:layout_alignLeft="@+id/rentedvideos_penalty"
        android:layout_alignStart="@+id/rentedvideos_penalty"
        android:layout_marginTop="20dp" />

</RelativeLayout>
</ScrollView>